<Window x:Class="SoundpackGenerator.NewLanguageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewLanguageDialog" Height="89" Width="300" MinHeight="105" MaxHeight="105" MinWidth="300">
    <Grid>
        <Label Content="Country code:" Margin="5,8,0,0" VerticalAlignment="Top" Height="26" HorizontalAlignment="Left" Width="89"/>
        <TextBox x:Name="TextBox_LanguageCode" Height="23" Margin="99,10,10,0" TextWrapping="Wrap" Text="{Binding currentFile.outputPath}" VerticalAlignment="Top"/>
        <Button x:Name="Button_OK" Content="OK" Margin="0,0,64,5" HorizontalAlignment="Right" Width="49" Click="Button_OK_Click" Height="23" VerticalAlignment="Bottom"/>
        <Button x:Name="Button_Cancel" Content="Cancel" Margin="0,0,10,5" HorizontalAlignment="Right" Width="49" Click="Button_Cancel_Click" Height="23" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
